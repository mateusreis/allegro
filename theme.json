{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "color": "#FFFFFF",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#111111",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#4A6BFF",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "color": "#FF6B4A",
          "name": "Secondary",
          "slug": "secondary"
        },
        {
          "color": "#F5F5F5",
          "name": "Light Gray",
          "slug": "light-gray"
        },
        {
          "color": "#767676",
          "name": "Medium Gray",
          "slug": "medium-gray"
        }
      ]
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "spacing": {
      "spacingSizes": [
        {
          "name": "Small",
          "size": "1rem",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "2rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "3rem",
          "slug": "large"
        }
      ],
      "units": [
        "%",
        "px",
        "em",
        "rem",
        "vh",
        "vw"
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "System Font",
          "slug": "system"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "size": "0.875rem",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "1rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "1.5rem",
          "slug": "large"
        },
        {
          "name": "X-Large",
          "size": "2rem",
          "slug": "x-large"
        },
        {
          "name": "XX-Large",
          "size": "3rem",
          "slug": "xx-large"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true
  },
  "styles": {
    "color": {
      "background": "var:preset|color|base",
      "text": "var:preset|color|contrast"
    },
    "spacing": {
      "blockGap": "1.5rem",
      "padding": {
        "top": "0",
        "right": "1.5rem",
        "bottom": "0",
        "left": "1.5rem"
      }
    },
    "typography": {
      "fontFamily": "var:preset|font-family|system",
      "fontSize": "var:preset|font-size|medium",
      "lineHeight": "1.6"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var:preset|color|primary",
          "text": "var:preset|color|base"
        },
        ":hover": {
          "color": {
            "background": "var:preset|color|contrast",
            "text": "var:preset|color|base"
          }
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        "typography": {
          "fontSize": "var:preset|font-size|medium"
        },
        "border": {
          "radius": "4px"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var:preset|font-size|xx-large",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var:preset|font-size|x-large",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var:preset|font-size|large",
          "lineHeight": "1.4"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "top": "1rem",
            "bottom": "1rem"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "1rem"
          }
        }
      },
      "core/group": {
        "spacing": {
          "padding": {
            "top": "2rem",
            "right": "2rem",
            "bottom": "2rem",
            "left": "2rem"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}
